# Supabase Configuration
# Supabase Dashboard > Settings > API から取得
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Claude Code SDK / Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key

# GitHub OAuth 
# GitHub Settings > Developer settings > OAuth Apps で作成
# Supabase Authentication > Providers で設定
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitLab OAuth
# GitLab User Settings > Applications で作成  
# Supabase Authentication > Providers で設定
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# Application URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Security Keys (本番環境では必ず変更)
TOKEN_ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# Optional: Analytics & Monitoring
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Development Settings
NODE_ENV=development